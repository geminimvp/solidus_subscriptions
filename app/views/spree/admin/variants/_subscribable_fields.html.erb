<div class="col-12">
  <div class="row">
    <div class="col-3">
      <div class="field one columns checkbox" data-hook="subscribable">
        <%= f.label :subscribable do %>
          <%= f.check_box :subscribable %>
          <%= Spree::Variant.human_attribute_name(:subscribable) %>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      <div class="field" data-hook="subscription_interval_length">
        <%= f.label :subscription_interval_length %>
        <%= f.text_field :subscription_interval_length %>
      </div>
    </div>
    <div class="col-3">
      <div class="field" data-hook="subscription_interval_units">
        <%= f.label :subscription_interval_units %>
        <%= f.select :subscription_interval_units, %w(day week month year) %>
      </div>
    </div>
  </div>
</div>
